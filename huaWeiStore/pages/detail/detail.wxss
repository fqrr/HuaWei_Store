/* pages/detail/detail.wxss */
swiper image{
  width: 100%;
  height: 200px;
}
swiper{
  height: 200px;
}

.detailtabbar{
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    display: flex;
    background-color: white;
    padding: 25rpx;
}
.detailtabbar view{
  flex: 1;
}
.detailtabbar .active{
  border-bottom: 3rpx solid red;
}
.user{
  overflow: hidden;
}
.user image{
        width: 100rpx;
        border-radius:50% ;
        margin-left: 20rpx;
        margin-top: 20rpx;
}
.user .left{
float: left;
height: 100rpx;
line-height: 100rpx;
margin-right: 30rpx;
}
.user .right{
  float: right;
  height: 100rpx;
  line-height: 100rpx;
  margin-right: 20rpx;
  }


.content{
      padding: 20rpx;
}
.content image{
    width: 200rpx;
}

.bottom{
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: white;
    display: flex;
}
.bottom view{
  flex: 1;
}